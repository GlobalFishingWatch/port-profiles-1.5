citHeader("To cite satellite in publications use:")

citEntry(entry = "Article",
  title        = "Manipulating satellite data with {satellite}",
  author       = personList(as.person("Thomas Nauss"),
                   as.person("Hanna Meyer"),
                   as.person("Florian Detsch"),
                   as.person("Tim Appelhans")),
  journal      = "unpublished",
  year         = "2019",
  volume       = "na",
  number       = "na",
  pages        = "na--na",
  url          = "http://www.environmentalinformatics-marburg.de",

  textVersion  =
  paste("Thomas Nauss, Hanna Meyer, Tim Appelhans, Florian Detsch (2019).",
        "Manipulating satellite data with satellite.",
        "unpublished, na(na), na-na.",
        "URL http://www.environmentalinformatics-marburg.de.")
)